<odoo>
    <record id="view_beauty_clinic_appointment_form" model="ir.ui.view">
        <field name="name">beauty.clinic.appointment.form</field>
        <field name="model">beauty.clinic.appointment</field>
        <field name="arch" type="xml">
            <form string="Beauty Clinic Appointment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="service_id"/>
                        <field name="appointment_date"/>
                        <field name="phone"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beauty_clinic_appointment_tree" model="ir.ui.view">
        <field name="name">beauty.clinic.appointment.tree</field>
        <field name="model">beauty.clinic.appointment</field>
        <field name="arch" type="xml">
            <tree string="Beauty Clinic Appointment">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="service_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>
